<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml" 
          fx:controller="controller.forms.AddMaintenanceFormController"
          hgap="10" vgap="10" 
          style="-fx-padding: 20; 
                 -fx-border-width: 2; 
                 -fx-border-radius: 10; 
                 -fx-background-radius: 10; 
                 -fx-background-color: #f5f5f7;"
          maxWidth="500"
          maxHeight="400">

    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
        <ColumnConstraints hgrow="ALWAYS" percentWidth="50"/>
    </columnConstraints>

    <!-- Form Title -->
    <Label text="Add Maintenance Record" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2">
        <font>
            <Font name="System Bold" size="20"/>
        </font>
    </Label>

    <!--Vehicle-->
    <Label text="Vehicle:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2"/>
    <ComboBox fx:id="cmbVehicles" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" maxWidth="500" style="-fx-background-color: white; -fx-border-radius: 5;  -fx-pref-height: 35;" />
   
    <!--Cost-->
    <Label text="Cost:" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="1"/>
    <TextField fx:id="txtCost" GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="1" maxWidth="500" style="-fx-background-color: white; -fx-border-radius: 5;  -fx-pref-height: 35;" />
   
    <!--Date-->
    <Label text="Date:" GridPane.columnIndex="1" GridPane.rowIndex="3" GridPane.columnSpan="1"/>
    <DatePicker fx:id="serviceDate" GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.columnSpan="1" maxWidth="500" style="-fx-background-color: white; -fx-border-radius: 5;  -fx-pref-height: 35;" />

    <!--Description-->
    <Label text="Description: " GridPane.columnIndex="0" GridPane.rowIndex="5" GridPane.columnSpan="2"/>
    <TextField fx:id="txtDescription" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" maxHeight="200" maxWidth="500" style="-fx-background-color: white; -fx-border-radius: 5;  -fx-pref-height: 35;" />

    <!--Buttons-->
    <HBox spacing="20" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2" alignment="CENTER_RIGHT" maxWidth="500" style="-fx-padding:10 10 10 10;">
        <Button text="Cancel" fx:id="btnCancel" onAction="#clearForm"/>
        <Button text="Submit" fx:id="btnSubmit" onAction="#onSubmit"/>
    </HBox>
</GridPane>

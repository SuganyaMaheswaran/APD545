<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.summary.VehicleSummaryController"
      spacing="10"
      alignment="TOP_CENTER"
      stylesheets="@/styles/TableStyle.css">

    <!-- Title aligned left -->
    <HBox alignment="TOP_LEFT" prefWidth="400">
        <Label text="Vehicle Summary View" style="-fx-padding: 0 0 10 0;">
            <font>
                <Font name="System Bold" size="20"/>
            </font>
        </Label>
    </HBox>

    <!-- Table -->
    <TableView fx:id="vehiclesSummaryTable" prefWidth="400" prefHeight="300" maxHeight="750">
        <columns>
            <TableColumn fx:id="makeColumn" text="Make" prefWidth="100"/>
            <TableColumn fx:id="modelColumn" text="Model" prefWidth="100"/>
            <TableColumn fx:id="yearColumn" text="Year" prefWidth="100"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
